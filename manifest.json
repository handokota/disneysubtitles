{
  "name": "Disney Plus",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Fixing Disney Plus subtitles.",
  "content_scripts": [
    {
      "matches": ["*://*.hotstar.com/*"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "*.otf"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}