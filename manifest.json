{
  "name": "Disney+ Hotstar Subtitle",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Fixing Disney+ Hotstar Subtitle",
  "content_scripts": [
    {
      "matches": ["*://*.hotstar.com/*"],
