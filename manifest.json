  "name": "Fixing Disney Subtitles",
  "description": "Fixing Disney Hotstar Hebrew Subtitle",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon-72x72.png",
    "32": "icons/icon-96x96.png",
    "48": "icons/icon-128x128.png",
    "128": "icons/icon-144x144.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.hotstar.com/id/*"],
      "css": ["mystyle.css"]
    }
  ]
}
